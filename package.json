  "description": "Backend para o sistema de pagamentos desenvolvido para a disciplina CSI-28",
  "main": "index.js",
  "scripts": {
    "dev": "npx ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "migrate:start": "npm run prisma:migrate && npm run start",
    "test": "jest --config src/jest.config.ts --runInBand",
    "test:accounts": "jest src/__tests__/accounts.test.ts --config src/jest.config.ts",
    "test:users": "jest src/__tests__/user.test.ts --config src/jest.config.ts",
    "test:categories": "jest src/__tests__/categories.test.ts --config src/jest.config.ts",
    "test:transactions": "jest src/__tests__/transactions.test.ts --config src/jest.config.ts"
  },
